// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  groupId     String     @id
  title       String
  iconUrl     String?
}

model UserGroup {
  userId      String
  groupId     String
  
  @@id([userId, groupId])
}

model UserGroupInvitation {
  userId      String
  groupId     String
  
  @@id([userId, groupId])
}